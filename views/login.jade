extends layout

block content
    h1 Login
    p Please login using your Username and Password
    form(method="post", action="/users/login", enctype="application.json")
        .form-group
            label Username
            input.form-control(name="username", type="text")
        .form-group
            label Password
            input.form-control(name="password", type="password")
        input.btn.btn-primary(name="submit", type="submit", value="Login")
